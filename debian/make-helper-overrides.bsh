make_install_hook_post() {
   if [ ! -d "$DESTDIR/usr/lib" ]; then
      mkdir --parents "$DESTDIR/usr/lib/libhardened_malloc.so"
   fi
   cp libhardened_malloc.so "$DESTDIR/usr/lib/libhardened_malloc.so/libhardened_malloc.so"
}
